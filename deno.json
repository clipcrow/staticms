{
  "lock": false,
  "tasks": {
    "build": "deno run -A build.ts",
    "serve": "deno run --unstable-kv --allow-net --allow-read --allow-write --allow-env serve.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "types": ["@types/react", "@types/react-dom"]
  },
  "imports": {
    "esbuild": "https://deno.land/x/esbuild@v0.20.2/mod.js",
    "esbuild_deno_loader": "jsr:@luca/esbuild-deno-loader@^0.10.3",
    "@oak/oak": "jsr:@oak/oak@^17.2.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/path": "jsr:@std/path@^1.1.3",
    "djwt": "https://deno.land/x/djwt@v3.0.1/mod.ts",
    "@types/react": "npm:@types/react@^19.2.6",
    "@types/react-dom": "npm:@types/react-dom@^19.2.3",
    "react": "npm:react@^19.2.0",
    "react-dom": "npm:react-dom@^19.2.0",
    "react-router-dom": "npm:react-router-dom@^6.22.3",
    "react/jsx-runtime": "npm:react@^19.2.0/jsx-runtime",
    "js-yaml": "npm:js-yaml@4.1.1",
    "react-md-editor": "npm:@uiw/react-md-editor@^4.0.4",
    "rehype-highlight": "npm:rehype-highlight@^6.0.0",
    "highlight.js/styles/github.css": "npm:highlight.js@^11.9.0/styles/github.css"
  }
}
