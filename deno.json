{
  "lock": false,
  "lint": {
    "exclude": [
      "public/",
      "architecture/legacy_staticms_v1/"
    ]
  },
  "tasks": {
    "dev": "deno run -A scripts/dev.ts",
    "build": "deno run -A scripts/build.ts && deno run -A scripts/build_css.ts",
    "build:js": "deno run -A scripts/build.ts",
    "build:css": "deno run -A scripts/build_css.ts",
    "test": "deno test -A --unstable-kv",
    "test:e2e": "E2E_HEADLESS=true E2E_DELAY=0 deno test -A --unstable-kv e2e/",
    "test:e2e:demo": "E2E_HEADLESS=false E2E_DELAY=2000 deno test -A --unstable-kv e2e/",
    "test:unit": "deno test -A --unstable-kv src/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "types": [
      "@types/react",
      "@types/react-dom"
    ]
  },
  "imports": {
    "@/": "./src/",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "gray-matter": "npm:gray-matter@^4.0.3",
    "react-router-dom": "npm:react-router-dom@^6.22.0",
    "react/jsx-runtime": "npm:react@^19.0.0/jsx-runtime",
    "@types/react": "npm:@types/react@^18.2.0",
    "@types/react-dom": "npm:@types/react-dom@^18.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@oak/oak": "jsr:@oak/oak@^17.0.0",
    "djwt": "https://deno.land/x/djwt@v3.0.1/mod.ts",
    "@testing-library/react": "npm:@testing-library/react@^16.0.0",
    "@happy-dom/global-registrator": "npm:@happy-dom/global-registrator@^15.0.0",
    "astral": "jsr:@astral/astral@^0.4.0",
    "semantic-ui-css": "npm:semantic-ui-css@^2.5.0",
    "js-yaml": "npm:js-yaml@4.1.1",
    "sass": "npm:sass@^1.71.0",
    "@std/fs": "jsr:@std/fs@^0.218.0",
    "@std/fmt": "jsr:@std/fmt@^0.225.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "esbuild": "npm:esbuild@0.20.2",
    "react-md-editor": "npm:@uiw/react-md-editor@^4.0.0",
    "rehype-highlight": "npm:rehype-highlight@^7.0.0",
    "deno_esbuild": "jsr:@luca/esbuild-deno-loader@^0.10.3"
  }
}
